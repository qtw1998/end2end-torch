{
    "name": "Mnist_LeNet",
    "n_gpu": 1,

    "arch": {
        "type": "End2endModel",
        "args": {}
    },
    "data_loader": {
        "type": "DataLoader",
        "args":{
            "data_dir": "data/img/",
            "batch_size": 40,
            "shuffle": true,
            "validation_split": 0.2,
            "roi_h": 350,
            "num_workers": 16
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 1000,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 300,

        "tensorboard": true
    }
}
